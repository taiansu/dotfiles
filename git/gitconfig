[include]
  path = .git_credential
[alias]
  aa    = add --all
  ap    = add -p
  amend = commit -C HEAD --amend
  br    = branch
  cb    = checkout -b
  ci    = commit
  cim   = commit -m
  ciam  = commit --amend
  co    = checkout
  colwrd = diff --color-words='\\w+|\\S'
  d     = diff
  dc    = diff --cached
  dt    = difftool
  dk    = difftool -y -t Kaleidoscope
  f     = fetch
  fp    = fetch -p
  fu    = fetch upstream
  l     = pull
  lf    = !git-foresta --style=10 "$@" | less -RSX
  lg    = log --graph --abbrev-commit
  lgp   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit -p
  lsau  = !git ls-files -v | grep ^h | awk '{print $2}'
  mg    = merge
  mgnf  = merge --no-ff
  p     = push --recurse-submodules=check
  pu    = push --recurse-submodules=check -u
  pa    = push --recurse-submodules=on-demand
  rb    = rebase
  rbc   = rebase --continue
  ref   = reflog show --date=relative
  rhh   = reset HEAD --hard
  rh    = reset HEAD
  #remove deleted files
  rmd   = !git rm `git ls-files --deleted`
  sh    = stash
  sha   = "!f(){ git stash apply stash^{/$*}; }; f"
  shs   = "!f(){ git stash show stash^{/$*} -p; }; f"
  shl   = stash list
  shp   = stash pop
  shu   = stash -u
  st    = status
  # use ! to execute unix command
  sync  = !"git fetch origin -v && git fetch upstream -v && git merge upstream/master"
[core]
  excludesfile = /Users/tai/.gitignore
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  #set autocrlf and safecrlf
  #autocrlf = input # use true if windows
  safecrlf     = true
[color]
  diff   = auto
  status = auto
  branch = auto
  log    = auto
  ui     = true
[merge "gemfilelock"]
  name   = relocks the Gemfile.lock
  driver = bundle install
[push]
  default = simple
[rerere]
  enabled = true
[diff]
  tool = Kaleidoscope
[difftool]
  prompt = false
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = Kaleidoscope
[mergetool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[credential]
  helper = osxkeychain
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[pull]
  ff = only
[pull]
  rebase = false
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[tag]
	forceSignAnnotated = true
