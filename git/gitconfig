[include]
  path = ~/.git_credential
[alias]
  aa    = add --all
  ap    = add -p
  amend = commit -C HEAD --amend
  br    = branch
  cb    = checkout -b
  ci    = commit
  cim   = commit -m
  ciam  = commit --amend
  co    = checkout
  colwrd = diff --color-words='\\w+|\\S'
  d     = diff
  dc    = diff --cached
  dt    = difftool
  dk    = difftool -y -t Kaleidoscope
  f     = fetch
  fo    = fetch origin
  fod   = fetch origin dev:dev
  fom   = fetch origin main:main
  fp    = fetch -p
  fu    = fetch upstream
  l     = pull
  lf    = !git-foresta --style=10 "$@" | less -RSX
  lg    = log --graph --abbrev-commit
  lgp   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit -p
  lgn   = log --pretty=format:'%C(yellow)%h %Cgreen%<(7)%aN %Cblue%>(12)%ad %Cred%d %Creset%s'
  lsau  = !git ls-files -v | grep ^h | awk '{print $2}'
  mg    = merge
  mgnf  = merge --no-ff
  p     = push --recurse-submodules=check
  pu    = push --recurse-submodules=check -u
  pa    = push --recurse-submodules=on-demand
  rb    = rebase
  rbc   = rebase --continue
  ref   = reflog show --date=relative
  rhh   = reset HEAD --hard
  rh    = reset HEAD
  #remove deleted files
  rmd   = !git rm `git ls-files --deleted`
  sh    = stash
  sha   = "!f(){ git stash apply stash^{/$*}; }; f"
  shs   = "!f(){ git stash show stash^{/$*} -p; }; f"
  shl   = stash list
  shp   = stash pop
  shu   = stash -u
  st    = status
  # use ! to execute unix command
  sync  = !"git fetch origin -v && git fetch upstream -v && git merge upstream/master"
[core]
  excludesfile = ~/.gitignore
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  #set autocrlf and safecrlf
  #autocrlf = input # use true if windows
  editor = ~/.dotfiles/vimr_wait
  safecrlf     = true
  pager = diff-so-fancy | less --tabs=4 -RFX
[color]
  diff   = auto
  status = auto
  branch = auto
  log    = auto
  ui     = true
[merge "gemfilelock"]
  name   = relocks the Gemfile.lock
  driver = bundle install
[push]
      default = simple
      autoSetupRemote = true
[rerere]
  enabled = true
[difftool]
  prompt = false
[merge]
  tool = Kaleidoscope
[mergetool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[credential]
  helper = osxkeychain
[pull]
  ff = only
[pull]
  rebase = false
[init]
  defaultBranch = main
[commit]
  gpgsign = true
  template = ~/.stCommitMsg
[tag]
  forceSignAnnotated = true
  gpgSign = true
[gpg]
  program = gpg2
[interactive]
  diffFilter = diff-so-fancy --patch
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
